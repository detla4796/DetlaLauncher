<Window x:Class="DetlaLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DetlaLauncher"
        Height="500"
        Width="900"
        Background="{StaticResource SteamDarkBrush}">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#0E1A0E" Grid.Row="0" CornerRadius="4">
            <DockPanel Margin="10,5">
                <TextBlock Text="DETLA LAUNCHER" Foreground="{StaticResource SteamAccentBrush}" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                <TextBlock Text="Библиотека" Foreground="#A0C090" Margin="20,0,0,0" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Content="Добавить игру" Width="130" Click="AddGame_Click"/>
                <Button Content="Удалить" Width="100" Margin="10,0,0,0" Click="Delete_Click"/>
            </StackPanel>

            <TextBox x:Name="SearchBox" Grid.Column="1" Height="25" Margin="10,0" VerticalContentAlignment="Center" TextChanged="SearchBox_TextChanged"/>

            <CheckBox x:Name="FavFilter" Grid.Column="2" VerticalAlignment="Center"  Content="Только избранное" Checked="FilterChanged" Unchecked="FilterChanged"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="{StaticResource SteamBorderBrush}" BorderThickness="1" CornerRadius="4">
                <ListBox x:Name="GamesList" SelectionChanged="GamesList_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="2" BorderBrush="#2A3A2A" BorderThickness="1" CornerRadius="2">
                                <TextBlock Text="{Binding Name}" Foreground="#C7D5C0" TextTrimming="CharacterEllipsis"/>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2F4F2F"/>
                                                <Setter Property="BorderBrush" Value="#3D5A3D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <Border Grid.Column="1" Margin="10,0,0,0" Padding="15" BorderBrush="{StaticResource SteamBorderBrush}" BorderThickness="1" CornerRadius="4" Background="{StaticResource SteamPanelBrush}">

                <StackPanel>

                    <TextBlock x:Name="NameText" FontSize="20" FontWeight="Bold" Foreground="#8BC53F" Margin="0,0,0,10"/>
                    <TextBlock x:Name="GenreText" Margin="0,0,0,4"/>
                    <TextBlock x:Name="RatingText" Margin="0,0,0,4"/>
                    <TextBlock x:Name="FavoriteText" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,15,0,15" LineHeight="20"/>
                    <TextBlock Text="Источники:" FontWeight="Bold" Margin="0,10,0,5"/>

                    <Border BorderBrush="{StaticResource SteamBorderBrush}" BorderThickness="1" CornerRadius="2">
                        <ListBox x:Name="SourcesList" DisplayMemberPath="Name" Height="100" Background="#1A2A1A"/>
                    </Border>

                    <Button Content="Открыть источник" Margin="0,10,0,0" Height="32" Click="OpenSource_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
