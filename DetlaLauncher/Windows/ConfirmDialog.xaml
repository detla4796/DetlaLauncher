<Window x:Class="DetlaLauncher.Windows.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение"
        Height="180"
        Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SteamDarkBrush}">

    <Border BorderBrush="{StaticResource SteamBorderBrush}" BorderThickness="2" CornerRadius="4">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Подтверждение удаления" FontSize="16" FontWeight="Bold" Foreground="{StaticResource SteamAccentBrush}" Margin="0,0,0,15"/>

            <TextBlock x:Name="MessageText" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Да" Width="80" Click="Yes_Click" Margin="0,0,10,0"/>
                <Button Content="Нет" Width="80" Click="No_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>