<Window x:Class="DetlaLauncher.Windows.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить игру"
        Height="450"
        Width="380"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SteamPanelBrush}">

    <Grid>
        <Border Background="{StaticResource SteamBorderBrush}" Height="32" VerticalAlignment="Top" MouseDown="TopBar_MouseDown">
            <DockPanel>
                <TextBlock Text="DETLA LAUNCHER" Foreground="{StaticResource SteamAccentBrush}" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>

                <Button Content="x" DockPanel.Dock="Right" Width="40" Background="{StaticResource SteamBorderBrush}" Foreground="{StaticResource SteamTextBrush}" BorderBrush="{StaticResource SteamAccentBrush}" Click="Close_Click"/>

                <TextBlock Text="Добавить игру" Foreground="{StaticResource SteamTextBrush}" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <Border Margin="10,40,10,10" Background="{StaticResource SteamDarkBrush}" BorderBrush="{StaticResource SteamBorderBrush}" BorderThickness="1" CornerRadius="4">

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <StackPanel Margin="15">

                    <TextBlock Text="Название игры" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="NameBox" Height="26" Margin="0,0,0,12"/>

                    <TextBlock Text="Жанр" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="GenreBox" Height="26" Margin="0,0,0,12"/>

                    <TextBlock Text="Рейтинг (1-10)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="RatingBox" Height="26" Margin="0,0,0,12"/>

                    <TextBlock Text="Описание" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="DescriptionBox" Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <CheckBox x:Name="FavoriteCheck" Content="Добавить в избранное" Margin="0,5,0,15"/>

                    <Separator Background="{StaticResource SteamBorderBrush}" Margin="0,0,0,15"/>

                    <TextBlock Text="Источник" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="SourceNameBox" Height="26" Margin="0,0,0,8" ToolTip="Название источника (Steam, Epic Games, сайт и т.п.)"/>

                    <TextBlock Text="URL источника" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="SourceUrlBox" Height="26" Margin="0,0,0,20" ToolTip="https://..."/>

                    <Button Content="Сохранить" Height="35" FontWeight="SemiBold" Click="Save_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>
