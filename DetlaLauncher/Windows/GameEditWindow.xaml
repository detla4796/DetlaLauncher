<Window x:Class="DetlaLauncher.Windows.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить игру" 
        Height="450" 
        Width="380"
        Background="{StaticResource SteamDarkBrush}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Margin="10" Background="{StaticResource SteamPanelBrush}" BorderBrush="{StaticResource SteamBorderBrush}" BorderThickness="1" CornerRadius="4">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">

                <TextBlock Text="Название игры" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="NameBox" Margin="0,0,0,12" Height="26"/>
                
                <TextBlock Text="Жанр" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="GenreBox" Margin="0,0,0,12" Height="26"/>
                
                <TextBlock Text="Рейтинг (1-10)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="RatingBox" Margin="0,0,0,12" Height="26"/>

                <TextBlock Text="Описание" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="DescriptionBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12"/>

                <CheckBox x:Name="FavoriteCheck" Content="Добавить в избранное" Margin="0,5,0,15"/>

                <Separator Background="{StaticResource SteamBorderBrush}" Margin="0,0,0,15"/>

                <TextBlock Text="Источник" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="SourceNameBox" Margin="0,0,0,8" Height="26" ToolTip="Название источника (Steam, Epic Games, сайт и т.п.)"/>

                <TextBlock Text="URL источника"  FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="SourceUrlBox" Margin="0,0,0,20" Height="26" ToolTip="https://..."/>

                <Button Content="Сохранить" Height="35" FontWeight="SemiBold" Click="Save_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
